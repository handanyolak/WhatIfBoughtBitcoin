{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/dist/*/**": true,
    "**/.nuxt/*/**": true
  },
  "files.associations": {
    "*.json": "javascript",
    "package.json": "json"
  },
  "files.saveConflictResolution": "overwriteFileOnDisk",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "json.format.enable": false,
  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "typescript.validate.enable": false,
  "typescript.surveys.enabled": false,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "versionlens.caching.duration": 0,
  "versionlens.composer.caching.duration": 0,
  "versionlens.npm.caching.duration": 0,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.fontWeight": "900",
  "errorLens.margin": "2ch",
  "errorLens.messageTemplate": "$count $severity: $message -($code) -$source",
  "errorLens.statusBarMessageTemplate": "$message $source $severity $code",
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.statusBarCommand": "copyMessage",
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.statusBarMessageType": "closestProblem",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconsFollowCursorOverride": false,
  "errorLens.onSave": true,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.css$",
        "cmd": "yarn run stylelint ${file} --fix; yarn run prettier ${file} --write;",
        "isAsync": true
      },
      {
        "match": "\\.scss$",
        "cmd": "yarn run stylelint ${file} --fix; yarn run prettier ${file} --write;",
        "isAsync": true
      },
      {
        "match": "\\.json$",
        "cmd": "yarn run eslint ${file} --fix; yarn run prettier ${file} --write;",
        "isAsync": true
      },
      {
        "match": "\\.js$",
        "cmd": "yarn run eslint ${file} --fix; yarn run prettier ${file} --write;",
        "isAsync": true
      },
      {
        "match": "\\.vue$",
        "cmd": "yarn run eslint ${file} --fix; yarn run stylelint ${file} --fix; yarn run prettier ${file} --write;",
        "isAsync": true
      }
    ]
  },
  "cSpell.language": "en",
  "cSpell.diagnosticLevel": "Warning",
  "cSpell.enableFiletypes": ["dotenv", "dockerfile", "ignore", "shellscript"],
  "stylelint.configFile": ".stylelintrc.js",
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass", "vue"],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/dist/**",
    "**/.nuxt/**"
  ],
  "headwind.runOnSave": false
}
